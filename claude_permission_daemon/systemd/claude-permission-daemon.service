[Unit]
Description=Claude Code Permission Daemon
Documentation=https://github.com/jantman/claude-code-tools
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/share/claude-permission-daemon/venv/bin/claude-permission-daemon
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
PrivateTmp=true

# Allow access to XDG_RUNTIME_DIR for socket
ReadWritePaths=%t

# Allow access to config directory
ReadOnlyPaths=%h/.config/claude-permission-daemon

# Ensure access to Wayland for swayidle
Environment=WAYLAND_DISPLAY=wayland-0

[Install]
WantedBy=graphical-session.target
